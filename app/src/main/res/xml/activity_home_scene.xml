<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
        <OnSwipe
            motion:dragDirection="dragUp"
            motion:touchAnchorSide="top"
            motion:touchAnchorId="@+id/list_cerita"
            motion:onTouchUp="stop"
            motion:moveWhenScrollAtTop="true"/>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/text_greeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@id/foto_user"
            motion:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="@dimen/_19sdp"
            android:layout_marginTop="@dimen/_8sdp">
            <CustomAttribute
                motion:attributeName="textSize"
                motion:customFloatValue="19"/>
        </Constraint>
        <Constraint
            android:id="@+id/nama_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@id/text_greeting"
            motion:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="@dimen/_19sdp">
            <CustomAttribute
                motion:attributeName="textSize"
                motion:customFloatValue="23"/>
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/text_greeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintLeft_toRightOf="@id/foto_user"
            android:layout_marginStart="@dimen/_11sdp"
            android:layout_marginTop="@dimen/_16sdp">
            <CustomAttribute
                motion:attributeName="textSize"
                motion:customFloatValue="16"/>
        </Constraint>
        <Constraint
            android:id="@+id/list_cerita"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_8sdp"
            motion:layout_constraintBottom_toTopOf="@id/navigation_bottom"
            motion:layout_constraintTop_toBottomOf="@id/foto_user"
            motion:layout_constraintLeft_toLeftOf="parent"
            motion:layout_constraintRight_toRightOf="parent" />
        <Constraint
            android:id="@+id/nama_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@id/text_greeting"
            motion:layout_constraintLeft_toRightOf="@id/foto_user"
            android:layout_marginStart="@dimen/_11sdp"
            android:layout_marginTop="@dimen/_minus6sdp">
            <CustomAttribute
                motion:attributeName="textSize"
                motion:customFloatValue="18"/>
        </Constraint>
    </ConstraintSet>
</MotionScene>