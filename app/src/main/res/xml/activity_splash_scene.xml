<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="3000"
        motion:autoTransition="animateToEnd">
        <KeyFrameSet>
            <KeyAttribute
                motion:motionTarget="@+id/bg_logo"
                motion:framePosition="0"
                android:scaleX="1.0" />
            <KeyAttribute
                motion:motionTarget="@+id/bg_logo"
                motion:framePosition="0"
                android:scaleY="1.0" />
            <KeyAttribute
                motion:motionTarget="@+id/text_logo"
                motion:framePosition="0"
                android:alpha="0.0" />
            <KeyAttribute
                motion:motionTarget="@+id/bg_logo"
                motion:framePosition="20"
                android:scaleX="1.0" />
            <KeyAttribute
                motion:motionTarget="@+id/bg_logo"
                motion:framePosition="20"
                android:scaleY="1.0" />
            <KeyAttribute
                motion:motionTarget="@+id/text_logo"
                motion:framePosition="20"
                android:alpha="0.0" />
            <KeyAttribute
                motion:motionTarget="@+id/bg_logo"
                motion:framePosition="75"
                android:scaleX="15" />
            <KeyAttribute
                motion:motionTarget="@+id/bg_logo"
                motion:framePosition="75"
                android:scaleY="15" />
            <KeyAttribute
                motion:motionTarget="@+id/text_logo"
                motion:framePosition="75"
                android:alpha="1.0" />
            <KeyAttribute
                motion:motionTarget="@+id/bg_logo"
                motion:framePosition="100"
                android:scaleX="15" />
            <KeyAttribute
                motion:motionTarget="@+id/bg_logo"
                motion:framePosition="100"
                android:scaleY="15" />
            <KeyAttribute
                motion:motionTarget="@+id/text_logo"
                motion:framePosition="100"
                android:alpha="1.0" />
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
    </ConstraintSet>
</MotionScene>